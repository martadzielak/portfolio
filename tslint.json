{"tslint.autoFixOnSave": true,
    "extends": "tslint:recommended",
    "rules": {
        "trailing-comma": [true, {
            "singleline": "never",
            "multiline": {
              "objects": "always",    
              "arrays": "always",
              "functions": "never",
              "typeLiterals": "ignore"
            }
          }],
        "no-shadowed-variables": false,
        "quotes": "single",
        "import-sources-order": "any",
        "allow-template-literals": true,
        "max-line-length": {
            "options": [120]
        },
        "object-literal-sort-keys": false,
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "variable-name": [
            false,
            "allow-leading-underscore"
          ],
        "no-console": {
            "severity": "warning",
            "options": ["debug", "info", "log", "time", "timeEnd", "trace"]
        }
    },
    "jsRules": {
        "max-line-length": {
            "options": [120]
        }
    }
}